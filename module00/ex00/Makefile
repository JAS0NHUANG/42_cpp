# **************************************************************************** #
#       COMANDS                                                                #
# **************************************************************************** #
CPP				=	c++
RM				=	rm -rf

# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
NAME			=	megaphone

# **************************************************************************** #
#       FLAGS                                                                  #
# **************************************************************************** #
CFLAGS			=	-Wall -Wextra -Werror
STD				=	-std=c++98
FSAN			=	-fsanitize=address
DEBUG			=	-g3 -O0

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS_DIR		=	srcs

SRCS			=	megaphone.cpp \

# **************************************************************************** #
#       LIBRARIES                                                              #
# **************************************************************************** #

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #
OBJS			=	$(addprefix $(SRCS_DIR)/,$(SRCS:.cpp=.o))

%.o				:	%.cpp
					$(CPP) $(CFLAGS) $(STD) -c $< -o $@

$(NAME)			:	$(OBJS)
					$(CPP) $(CFLAGS) $(STD) -o $@ $(OBJS)

debug			:	$(OBJS)
					$(CPP) $(CFLAGS) $(STD) -o $@ $(OBJS) $(FSAN) $(DEBUG)

all				:	$(NAME)

clean			:
					$(RM) $(OBJS)

fclean			:	clean
					$(RM) $(NAME)
					$(RM) debug 

re				:	fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY			:	all clean fclean re
