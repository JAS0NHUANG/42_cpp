# **************************************************************************** #
#       COMANDS                                                                #
# **************************************************************************** #
CPP				=	c++
RM				=	rm -rf

# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
NAME			=	account_test

# **************************************************************************** #
#       FLAGS                                                                  #
# **************************************************************************** #
FLAGS			=	-Wall -Wextra -Werror
STD				=	-std=c++98
FSAN			=	-fsanitize=address
DEBUG			=	-g3 -O0

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS_DIR		=	srcs
INCS_DIR		=	incs

SRCS			=	tests.cpp \
					Account.cpp \

INCS			=	Account.hpp \

# **************************************************************************** #
#       LIBRARIES                                                              #
# **************************************************************************** #

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #
OBJS			=	$(addprefix $(SRCS_DIR)/,$(SRCS:.cpp=.o))

%.o				:	%.cpp
					$(CPP) $(CFLAGS) $(STD) -I $(INCS_DIR) -c $< -o $@

$(NAME)			:	$(OBJS)
					$(CPP) $(STD) -o $@ $(OBJS) -I $(INCS_DIR)

all				:	$(NAME)

clean			:
					$(RM) $(OBJS)

fclean			:	clean
					$(RM) $(NAME)

re				:	fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY			:	all clean fclean re
