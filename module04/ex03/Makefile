# **************************************************************************** #
#       COMANDS                                                                #
# **************************************************************************** #
CPP			=	c++
RM			=	rm -rf

# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
NAME		=	Animals

# **************************************************************************** #
#       FLAGS                                                                  #
# **************************************************************************** #
CFLAGS		=	-Wall -Wextra -Werror
STD			=	-std=c++98
FSAN		=	-fsanitize=address
DEBUG		=	-g3 -O0

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS		=	main.cpp \
				AMateria.cpp \
				Animal.cpp \
				Dog.cpp \
				Cat.cpp \
				WrongAnimal.cpp \
				WrongCat.cpp \
				Brain.cpp \

# **************************************************************************** #
#       LIBRARIES                                                              #
# **************************************************************************** #

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #
OBJS		=	$(SRCS:.cpp=.o)

%.o			:	%.cpp
				$(CPP) $(CFLAGS) $(STD) -c $< -o $@

$(NAME)		:	$(OBJS)
				$(CPP) $(CFLAGS) $(STD) -o $@ $(OBJS)

all			:	$(NAME)

debug		:	$(OBJS)
				$(CPP) $(CFLAGS) $(STD) -o $@ $(OBJS) $(FSAN) $(DEBUG)

clean		:
				$(RM) $(OBJS)

fclean		:	clean
				$(RM) $(NAME)
				$(RM) debug

re			:	fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY		:	all clean fclean re
